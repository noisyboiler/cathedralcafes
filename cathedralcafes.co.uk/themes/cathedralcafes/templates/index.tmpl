{% import 'base_header.tmpl' as header with context %}
{% extends 'base.tmpl' %}

{% block content %}

    <header id="top" class="header">
        <div class="text-vertical-center">
            <h1>Cathedral Cafes</h1>
        </div>
        <p class="lead">A Quick Trip Around Our Church Of England Cathedral Cafes</p>
    </header>

    <!-- About -->
    <section id="about" class="about">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">

                    <p class="lead large">Cathedral Cafes pits church against church in an epic battle of cafes!</p>
                    <p class="lead">Each church is <i>brutally</i> critiqued on fundamental criteria such as their cakes, the quality of their dead people and on the trivia we learn on the day. So, which church has the "â€ -factor"?</p>

                </div>
            </div>
            <!-- /.row -->
        </div>
        <!-- /.container -->
    </section>
    <!--
    <section id="map" class="bg-primary">

        <iframe width='100%' height='750px' frameBorder='0' src='https://a.tiles.mapbox.com/v4/noisyboiler.no4n9p01/attribution,geocoder,share.html?access_token=pk.eyJ1Ijoibm9pc3lib2lsZXIiLCJhIjoiYjc2MDdlYzY0YWFiYzMxYzljOGYzM2ZlMzcyZmQ2NTUifQ.m20m7hldRUu0kKc1mVCkPw'></iframe>

    </section>
